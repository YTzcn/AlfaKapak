<Window x:Class="AlfaKapak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlfaKapak"
        mc:Ignorable="d"
        Title="MainWindow" Height="453" Width="800">
    <Grid Margin="0,0,-280,-189" UseLayoutRounding="False" MinWidth="1080" MinHeight="1081" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.102"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnBgImage" Content="Arkaplan Resim
                " HorizontalAlignment="Left" Margin="36,29,0,0" VerticalAlignment="Top" Width="136" Click="btnBgImage_Click"/>
        <Button x:Name="btnHazirla" Content="Hazırla" HorizontalAlignment="Left" Margin="36,124,0,0" VerticalAlignment="Top" Width="136" Click="btnHazirla_Click"/>
        <Button x:Name="btnSmall2" Content="Küçük 2" HorizontalAlignment="Left" Margin="36,94,0,0" VerticalAlignment="Top" Width="136" Click="btnSmall2_Click"/>
        <Button x:Name="btnSmall1" Content="Küçük 1" HorizontalAlignment="Left" Margin="36,61,0,0" VerticalAlignment="Top" Width="136" Click="btnSmall1_Click"/>
        <Button x:Name="btnAddFeatures" Content="Özellikleri Ekle" HorizontalAlignment="Left" Margin="422,76,0,0" VerticalAlignment="Top" Width="150" Click="btnAddFeatures_Click"/>
        <ListBox x:Name="lbxFeatures" Margin="219,43,167,898"/>
        <TextBox x:Name="tbxFeatureAdd" HorizontalAlignment="Left" Margin="426,47,0,0" TextWrapping="Wrap" Text="Özellik Ekle" VerticalAlignment="Top" Width="145"/>
        <Button x:Name="btnRemoveFeature" Content="ÖzellikKaldır" HorizontalAlignment="Left" Margin="424,113,0,0" VerticalAlignment="Top" Width="142" Click="btnRemoveFeature_Click"/>
        <TextBox x:Name="tbxMainTitle" HorizontalAlignment="Left" Margin="48,238,0,0" TextWrapping="Wrap" Text="Ana Başlık" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbxLittleTitle" HorizontalAlignment="Left" Margin="46,214,0,0" TextWrapping="Wrap" Text="Küçük Başlık" VerticalAlignment="Top" Width="120"/>
        <TextBox Visibility="Hidden" Name="tbxMainTitle_Kopyala" TextChanged="tbxMainTitle_Kopyala_TextChanged" />

    </Grid>
</Window>
